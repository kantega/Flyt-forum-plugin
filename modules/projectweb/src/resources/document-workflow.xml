<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE workflow PUBLIC
                 "-//OpenSymphony Group//DTD OSWorkflow 2.8//EN"
                 "http://www.opensymphony.com/osworkflow/workflow_2_8.dtd">
<workflow>
  <initial-actions>
    <action id="1" name="Lag dokument">
      <results>
        <unconditional-result old-status="Created" status="Utkast" step="1">
          <post-functions>
            <function type="spring">
              <arg name="bean.name">createDocumentFunction</arg>
            </function>
          </post-functions>
        </unconditional-result>
      </results>
    </action>
  </initial-actions>
  <steps>
    <step id="1" name="Utkast">
      <meta name="document.status">Utkast</meta>
      <actions>
        <action id="101" name="Send til høring">
          <results>
            <unconditional-result old-status="Finished" status="Estimate requested" step="2">
              <post-functions>
                <function type="spring">
                  <arg name="bean.name">updateDocumentStatusFunction</arg>
                </function>
              </post-functions>
            </unconditional-result>
          </results>
        </action>
      </actions>
    </step>
    <step id="2" name="Til høring">
      <meta name="document.status">Til høring</meta>
      <actions>
        <action id="201" name="Avslutt høring">
          <results>
            <unconditional-result old-status="Finished" status="Estimated"
              step="3">
              <post-functions>
                <function type="spring">
                  <arg name="bean.name">updateDocumentStatusFunction</arg>
                </function>
              </post-functions>
            </unconditional-result>
          </results>
        </action>
      </actions>
    </step>
    <step id="3" name="Høring avsluttet">
      <meta name="document.status">Høring avsluttet</meta>
      <actions>
        <action id="301" name="Send til godkjenning">
          <results>
            <unconditional-result old-status="Finished" status="Sendt tilgodkjenning"
              step="4">
              <post-functions>
                <function type="spring">
                  <arg name="bean.name">updateDocumentStatusFunction</arg>
                </function>
              </post-functions>
            </unconditional-result>
          </results>
        </action>
      </actions>
    </step>
    <step id="4" name="Til godkjenning">
          <meta name="document.status">Til godkjenning</meta>
          <actions>
            <action id="401" name="Godkjenn endring">
              <results>
                <unconditional-result old-status="Finished" status="Endring godkjent"
                  step="5">
                  <post-functions>
                    <function type="spring">
                      <arg name="bean.name">updateDocumentStatusFunction</arg>
                    </function>
                  </post-functions>
                </unconditional-result>
              </results>
            </action>
            <action id="402" name="Send til ny høring">
              <results>
                <unconditional-result old-status="Finished" status="Sendt til ny høring"
                  step="2">
                  <post-functions>
                    <function type="spring">
                      <arg name="bean.name">updateDocumentStatusFunction</arg>
                    </function>
                  </post-functions>
                </unconditional-result>
              </results>
            </action>
          </actions>
        </step>

    <step id="5" name="Godkjent">
      <meta name="document.status">Godkjent</meta>
      <actions>
        <action id="502" name="Lag ny revisjon">
          <results>
            <unconditional-result old-status="Finished" status="Finished"
              step="1">
              <post-functions>
                <function type="spring">
                  <arg name="bean.name">updateDocumentStatusFunction</arg>
                </function>
              </post-functions>
            </unconditional-result>
          </results>
        </action>
       </actions>
    </step>

  </steps>
</workflow>     