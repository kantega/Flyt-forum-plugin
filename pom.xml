<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>no.kantega.aksess.modules</groupId>
    <artifactId>aksess-modules</artifactId>
    <packaging>pom</packaging>
    <version>1.21.8-SNAPSHOT</version>
    <name>Aksess Modules</name>

    <scm>
        <connection>scm:svn:https://subversion.kantega.no/svn/aksess/projects/aksess-modules/trunk</connection>
    </scm>

    <distributionManagement>
        <repository>
            <id>kantega-releases</id>
            <name>Aksess internal repository</name>
            <url>http://nexus.kantega.lan/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>kantega-releases</id>
            <name>Aksess snapshots repository</name>
            <url>http://nexus.kantega.lan/content/repositories/snapshots/</url>
        </snapshotRepository>
        <site>
            <id>maven</id>
            <name>Aksess website</name>
            <url>scpexe://subversion.kantega.no/var/www/html/aksess/</url>
        </site>
    </distributionManagement>

    <repositories>
        <repository>
            <id>nexus</id>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <url>http://nexus.kantega.lan/content/groups/public/</url>
        </repository>

    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>opensource.kantega.no</id>
            <url>http://opensource.kantega.no/nexus/content/groups/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <modules>
        <module>modules/core</module>
        <module>modules/forum</module>
        <module>modules/webapp</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.0</version>
                <configuration>
                    <remoteTagging>true</remoteTagging>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <goals>deploy</goals>
                    <username>hudson</username>
                    <password>${hudson.password}</password>
                </configuration>
            </plugin>
        </plugins>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/resources</directory>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>

    <properties>
        <aksess.version>[7.8.1,]</aksess.version>
        <securityapi.version>1.10</securityapi.version>
        <springframework.version>3.0.5.RELEASE</springframework.version>
        <hibernate.version>3.2.6.ga</hibernate.version>
        <servlet.version>3.0.1</servlet.version>
        <jsp.version>2.2</jsp.version>
        <jstl.version>1.2</jstl.version>
    </properties>

</project>

